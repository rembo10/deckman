# EditorConfig
# https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
indent_size = 4
indent_style = space

# 2 space indentation
[*.{js,jsx,ts,tsx,json}]
indent_size = 2
indent_style = space
